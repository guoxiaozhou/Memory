<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bk">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/icon"
            android:layout_gravity="center"
            android:layout_width="60dp"
            app:border_color="@android:color/white"
            app:border_width="2dp"
            android:layout_height="60dp" />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_lg_username"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="用户名"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="#4F94CD"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="用户名"
            app:met_maxCharacters="10"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_lg_password"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textWebPassword"
            app:met_baseColor="@android:color/white"
            app:met_primaryColor="#4F94CD"
            android:password="true"
            app:met_floatingLabelTextColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="密码"
            app:met_maxCharacters="10"/>
        <Button
            android:id="@+id/bt_login"
            android:text="登  录"
            android:background="@drawable/roundbutton"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lg_register"
            android:text="注 册"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>