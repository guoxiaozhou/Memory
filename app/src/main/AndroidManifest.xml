<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.xz.weiji">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher_memory"
        android:label="@string/application_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme,android:allowBackup,android:name,android:label">
        //友盟设置
        <meta-data android:value="5b021f49f43e48045a0000ac" android:name="UMENG_APPKEY"/>
        <meta-data android:value="${UMENG_CHANNEL_VALUE}" android:name="UMENG_CHANNEL"/>


        <activity
            android:name="com.example.xz.weiji.AppActivity.LoginActivity"
            android:theme="@style/Theme.AppStartLoad">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1106314377" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">

        </activity>
        <activity
            android:name=".AppActivity.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".AppActivity.NoteActivity"
            android:theme="@style/NoteStyle">

        </activity>
        <activity
            android:name=".AppActivity.EditActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".AppActivity.TestActivity">

        </activity>
        <activity
            android:name=".AppActivity.MoneyActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden"></activity>
        <activity android:name=".AppActivity.ClassifyActivity" />
        <activity android:name=".AppActivity.ChangePersonActivity" />
        <activity android:name=".AppActivity.ReFirestpageActivity"></activity>
        <activity android:name=".AppActivity.NoteListActivity" />
        <activity android:name=".AppActivity.ZhangbenActivity" />
        <activity android:name=".AppActivity.DaojishiActivity" />
        <activity android:name=".AppActivity.HeadActivity" />
        <activity
            android:name="me.iwf.photopicker.PhotoPagerActivity"
            android:theme="@style/AnotherAppTheme"
            android:screenOrientation="portrait" />
        <activity
            android:name="me.iwf.photopicker.PhotoPickerActivity"
            android:theme="@style/AnotherAppTheme"
            android:screenOrientation="portrait" />

        //每日新闻下的Activity
        <activity android:name=".MyApplicationActivity.MainActivity" >
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.MAIN" />-->

            <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity android:name=".MyApplicationActivity.ItemActivity"
            android:theme="@style/AppTheme.Transparent"/>

    </application>

</manifest>